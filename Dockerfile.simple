FROM python:3.11-slim

WORKDIR /app

# Copy and install requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt pydantic-settings

# Copy application
COPY app/ ./app/
COPY main.py .
COPY alembic.ini .
COPY migrations/ ./migrations/

# Create directories
RUN mkdir -p /app/uploads /app/logs /app/static

EXPOSE 10001

CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "10001"]